    /**
     * @dev Allows the admin to add a new ticket bundle or update an existing one.
     * @param bundleId The ID of the bundle to add or update.
     * @param amount The number of tickets per bundle.
     * @param usdPrice The price per bundle in USD, with 8 decimals.
     * @param maxAvailable The maximum number of bundles available for purchase.
     * @param isActive Whether the bundle should be available for purchase.
     */
    function setTicketBundle(uint256 bundleId, uint256 amount, uint256 usdPrice, uint256 vextPrice, uint256 maxAvailable, bool isActive) external onlyOwner {
        require(maxAvailable >= ticketBundles[bundleId].totalBought, "Max Available Must Be Greater Than Total Bought!");

        if (!ticketBundles[bundleId].isActive && isActive) {
            supportedBundles.push(bundleId);
        } else if (ticketBundles[bundleId].isActive && !isActive) {
            removeElementBundles(bundleId);
        }

        ticketBundles[bundleId] = TicketBundle(amount, usdPrice, vextPrice, ticketBundles[bundleId].totalBought, maxAvailable, isActive);
    }

    ///
    /// VIEWS
    ///

    /**
     * @dev Calculates the price for a given bundle in USDC
     * @param bundleId The ID of the bundle.
     * @return The price in USDC for the specified bundle.
     */
    function getPriceUSDC(uint256 bundleId) external view returns (uint256) {
        require(ticketBundles[bundleId].isActive, "Invalid Bundle!");

        return (ticketBundles[bundleId].usdPrice * 10 ** IERC20Metadata(USDC).decimals()) / 10 ** 26;
    }

    ///
    /// MISC
    ///

    /**
     * @dev Internal function to remove a bundle ID from the supportedBundles array.
     * @param element The bundle ID to remove.
     */
    function removeElementBundles(uint256 element) internal {
        for (uint i = 0; i < supportedBundles.length; i++) {
            if (supportedBundles[i] == element) {
                supportedBundles[i] = supportedBundles[supportedBundles.length - 1];
                supportedBundles.pop();
                break;
            }
        }
    }

    /**
     * @dev Allows the contract owner to withdraw a specified amount of the contract's native currency to a given address.
     * @param account The address to withdraw to.
     * @param amount The amount of native currency to withdraw.
     */
    function ownerWithdraw(address payable account, uint256 amount) external onlyOwner {
        require(account != address(0), "Withdrawal to the zero address.");
        require(address(this).balance >= amount, "Insufficient balance for withdrawal.");
        Address.sendValue(account, amount);
    }

    /**
     * @dev Allows the contract owner to withdraw a specified amount of ERC20 tokens to a given address.
     * @param tokenAddress The address of the ERC20 token contract.
     * @param account The address to withdraw the tokens to.
     * @param amount The amount of tokens to withdraw.
     */
    function ownerWithdrawERC20(address tokenAddress, address account, uint256 amount) external onlyOwner {
        require(account != address(0) && tokenAddress != address(0), "Invalid address.");
        IERC20 token = IERC20(tokenAddress);
        require(token.balanceOf(address(this)) >= amount, "Insufficient token balance.");
        token.transfer(account, amount);
    }

